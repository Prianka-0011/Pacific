@model Pacifice_Website.ViewModel.DeleteProducrtVm
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header bg-info">
                <span class=" text-warning font-weight-normal"><b>Delete Product</b></span>
            </div>

            <div class="row">
                <div class="col-md-6 ml-2">

                    <div class="row">
                        <div class="col-md-11 offset-md-1">
                            <div asp-validation-summary="ModelOnly"></div>

                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="CategoryName"></label>
                                        <input class="form-control" asp-for="CategoryName" asp-items="ViewBag.Category">
                                        <span asp-validation-for="CategoryName"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Price"></label>
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Model"></label>
                                        <input asp-for="Model" class="form-control" />
                                        <span asp-validation-for="Model"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Grade"></label>
                                        <input asp-for="Grade" class="form-control" />
                                        <span asp-validation-for="Grade"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="CarCc"></label>
                                        <input asp-for="CarCc" class="form-control" />
                                        <span asp-validation-for="CarCc"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Seating"></label>
                                        <input asp-for="Seating" class="form-control" />
                                        <span asp-validation-for="Seating"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Fuel"></label>
                                        <input asp-for="Fuel" class="form-control" />
                                        <span asp-validation-for="Fuel"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Color"></label>
                                        <input asp-for="Color" class="form-control" />
                                        <span asp-validation-for="Color"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Condition"></label>
                                        <input asp-for="Condition" class="form-control" />
                                        <span asp-validation-for="Condition"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Transmission"></label>
                                        <input asp-for="Transmission" class="form-control" />
                                        <span asp-validation-for="Transmission"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Option"></label>
                                        <input asp-for="Option" class="form-control" />
                                        <span asp-validation-for="Option"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Year"></label>
                                        <input asp-for="Year" class="form-control" />
                                        <span asp-validation-for="Year"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <label asp-for="Description"></label>
                                        <input asp-for="Description" class="form-control" type="text" />
                                        <span asp-validation-for="Description"></span>
                                    </div>
                                </div>
                            </div>
                            <div class=" row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Status"></label>
                                        <input asp-for="Status" type="checkbox" />
                                        <span asp-validation-for="Status"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>

                <div class="col-md-5 mt-5">
                    <img src="~/@Model.Image" alt="Alternate Text" style="border-radius: 5px;border: 1px solid #efefef" ; width="300" ;height="300" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 offset-md-5 ">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button class="btn btn-success" type="submit">Delete</button>
                        <a asp-action="Index" class="btn btn-warning ml-1">Back To List</a>
                    </form>                 
                </div>
            </div>
        </div>
    </div>
</div>


