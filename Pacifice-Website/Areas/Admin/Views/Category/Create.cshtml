@model Pacifice_Website.Models.Category
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow mb-4">
                <div class="card-header bg-info">
                    <span class=" text-white font-weight-normal"><b>Create New Category </b></span>
                </div>
                <div class="row">
                    <div class="col-md-8 offset-md-4">
                        <div class="form-group row">
                            <div class="col-md-5">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-5">
                                <label asp-for="Status"></label>
                                <input asp-for="Status" type="checkbox" />
                            </div>
                        </div>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 offset-md-4 ">
                        <button class="btn btn-success btn btn-sm" type="submit">Save</button>
                        <a asp-action="Index" class="btn btn-info btn btn-sm ml-1">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
    