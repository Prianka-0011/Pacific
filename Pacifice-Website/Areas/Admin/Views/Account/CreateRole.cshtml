
@{
    ViewData["Title"] = "CreateRole";
}

<form asp-action="CreateRole" asp-controller="Acc" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-info">
                    <span class=" text-white font-weight-normal"><b>Create New Role </b></span>
                </div>

                <div class="row">
                    <div class="col-md-10 offset-md-2">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label class="text-white">Role Name</label>
                                    <input type="text" name="RoleName" value="" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-8 offset-md-4 ">
                                <button type="submit" class="btn btn-danger">Create Role</button>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-warning ml-1">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js">

        $(function(){
            var create = '@TempData["create"]';

            if (create != null) {
                alertify.success(create);
            }

        });
    </script>
}