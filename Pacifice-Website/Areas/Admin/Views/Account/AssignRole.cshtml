
@{
    ViewData["Title"] = "AssignRole";
}

<form asp-action="AssignRole" asp-controller="Account" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-info">
                    <span class=" text-white font-weight-normal"><b>Assign Role</b></span>
                </div>

                <div class="row">
                    <div class="col-md-8 offset-md-4">
                        <div asp-validation-summary="ModelOnly"></div>
                        <label class="text-success">@ViewBag.msg</label>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">

                                    <label class="text-white">User List</label>
                                    <select name="appuser" class="form-control">
                                        <option value="">-- Select User --</option>
                                        @foreach (var item in ViewBag.userlist)
                                        {
                                            <option value="@item.UserName">@item.UserName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label class="text-white">Role List</label>
                                    <select name="approle" class="form-control">
                                        <option value="">-- Select Role --</option>
                                        @foreach (var item in ViewBag.rolelist)
                                        {
                                            <option value="@item.NormalizedName">@item.NormalizedName</option>
                                        }
                                    </select><br />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                        <div class="form-group row">
                            <div class="col-md-3 offset-md-4 ">
                                <button type="submit" class="btn btn-sm btn-success text-center ml-5">Assign Role</button>
                                <a asp-action="Index" class="btn btn-sm  btn-info ml-1">Back To List</a>
                            </div>
                        </div>   
            </div>
        </div>
    </div>
</form>