@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <div  class="row">
        <div class="col-md-11 offset-md-1">
            <form  asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group1">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" />
                            <span asp-validation-for="Input.UserName" class="text-white"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group1">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" />
                            <span asp-validation-for="Input.Password" class="text-white"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group1 mt-1">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input class="checkbox1" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
              
                <div class="row">
                    <div class="col-md-5 offset-md-3 mb-5">
                        <button type="submit" class="submit-btn">Log In</button>
                    </div>
                </div>

            </form>
        </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
